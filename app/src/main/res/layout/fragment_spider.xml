<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spider"
    tools:context=".SpiderFragment">

    <TextView
        android:id="@+id/spiderFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:text="Spider Man"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSpider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Change Fragment"
        app:layout_constraintEnd_toEndOf="@+id/spiderFragment"
        app:layout_constraintStart_toStartOf="@+id/spiderFragment"
        app:layout_constraintTop_toBottomOf="@+id/spiderFragment"

        />

</androidx.constraintlayout.widget.ConstraintLayout>