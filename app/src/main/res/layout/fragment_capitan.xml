<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/capitan"
    tools:context=".CapitanFragment">


    <TextView
        android:id="@+id/capitanFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:text="Capitan America"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCapitan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Change Fragment"
        app:layout_constraintEnd_toEndOf="@+id/capitanFragment"
        app:layout_constraintStart_toStartOf="@+id/capitanFragment"
        app:layout_constraintTop_toBottomOf="@+id/capitanFragment"

        />


</androidx.constraintlayout.widget.ConstraintLayout>